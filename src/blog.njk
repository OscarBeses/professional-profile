---
layout: layouts/base.njk
title: Blog
description: "Awesome blog posts"
---

<section class="body-font">
    <h1 class="text-4xl font-bold pb-6">{{ title }}</h1>
    <div class="flex flex-wrap -m-4">
    {%- for item in collections.post | reverse -%}
      <div class="p-4 lg:w-1/2">
        <div class="h-full bg-gray-200 px-8 pt-16 pb-24 rounded-lg overflow-hidden text-center relative">
          <h2 class="tracking-widest text-xs title-font font-medium text-gray-500 mb-1">{{item.data.category}}</h2>
          <h1 class="title-font sm:text-2xl text-xl font-medium text-gray-900 mb-3">{{item.data.title}}</h1>
          <p class="leading-relaxed mb-3">{{item.data.teaser}}</p>
          <a href="{{ item.url }}" class="text-indigo-500 inline-flex items-center hover:underline">Leer m√°s
            <svg class="w-4 h-4 ml-2" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round">
              <path d="M5 12h14"></path>
              <path d="M12 5l7 7-7 7"></path>
            </svg>
          </a>
          <div class="text-center mt-2 leading-none flex justify-center absolute bottom-0 left-0 w-full py-4">
            <span class="text-gray-600 inline-flex items-center leading-none text-sm">
             <time value="{{ item.date }}" class="text-sm text-gray-500">{{ item.date | htmlDate }}</time>
            </span>
          </div>
        </div>
      </div>
    {%- endfor -%}

    </div>
</section>
